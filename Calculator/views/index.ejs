<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8"/>
    <title>Calculator</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript">
    function enter(val){
    	if(val=='c'){
    		var len=(document.getElementById("inp").value).length;
    		document.getElementById("inp").value=(document.getElementById("inp").value).substring(0,len-1);
    	}
    	else if(val=='r'){
        	document.getElementById("inp").value="";
        	document.getElementById("result").value="";
    	}
    	else
    		document.getElementById("inp").value=document.getElementById("inp").value+val;
    }    
    </script>
  </head>
  <body>
  <div align="center">
    <h1>Calculator</h1>
    <form method="post" action="/calculate">
   <input type="text" id="inp" name="inp"><br><br>
    <input type="button" id="one" value="1" onclick="enter('1')">
    <input type="button" id="two" value="2" onclick="enter('2')">
    <input type="button" id="three" value="3" onclick="enter('3')"><br><br>
    <input type="button" id="four" value="4" onclick="enter('4')">
    <input type="button" id="five" value="5" onclick="enter('5')">
    <input type="button" id="six" value="6" onclick="enter('6')"><br><br>
    <input type="button" id="seven" value="7" onclick="enter('7')">
    <input type="button" id="eight" value="8" onclick="enter('8')">
    <input type="button" id="nine" value="9" onclick="enter('9')"><br><br>
    <input type="button" id="decimal" value="." onclick="enter('.')">
    <input type="button" id="zero" value="0" onclick="enter('0')"><br><br>
    <input type="button" id="clear" value="Clear" onclick="enter('c')">
    <input type="button" id="reset" value="Reset" onclick="enter('r')">
    <input type="submit" value="="><br><br>
    <input type="button" id="add" value="+" onclick="enter('+')">
    <input type="button" id="sub" value="-" onclick="enter('-')">
    <input type="button" id="mul" value="*" onclick="enter('*')">
    <input type="button" id="div" value="/" onclick="enter('/')"><br><br><br>
    </form>
    RESULT: <input type="text" id="result" value="<%= data%>">
    </div>
  </body>
</html>